#!/bin/sh
case $BLOCK_BUTTON in
        3) notify-send "🔋 Battery module" "
🔋: discharging
🛑: not charging
♻: stagnant charge
🔌: charging
⚡: charged
❗: battery very low!" ;;
esac

# Give a battery name (e.g. BAT0) as an argument.
capacity=$(cat /sys/class/power_supply/"$1"/capacity) || exit
status=$(cat /sys/class/power_supply/"$1"/status)

if [ "$capacity" -le 20 ]; then
        warn="❗"
fi

[ -z $warn ] && warn=" "

[ "$status" = "Charging" ] && color=$(get_color 7)

printf "%s%s%s\n" "$(echo "$status" | sed -e "s/,//;s/Discharging/🔋/;s/Not Charging/🛑/;s/Charging/🔌/;s/Unknown/♻/;s/Full/⚡/;s/ 0*/ /g;s/ :/ /g")" "$warn" "$(echo "$capacity" | sed -e 's/$/%/')"
