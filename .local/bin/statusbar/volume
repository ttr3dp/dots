#!/bin/sh
case $1 in
    1) pavucontrol ;;
    2) pulsemixer --toggle-mute ;;
    4) pulsemixer --change-volume +1 ;;
    5) pulsemixer --change-volume -1 ;;
    3) notify-send "ðŸ”Š Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
        - Click to open pavucontrol.
        - Middle click to toggle mute.
        - Scroll to change."
esac

[ "$(pulsemixer --get-mute)" = "1" ] && printf "ðŸ”‡\\n" && exit

vol=$(pulsemixer --get-volume | awk '{print $1}')

if [ "$vol" -gt "70" ]; then
    icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
    icon="ðŸ”ˆ"
else
    icon="ðŸ”‰"
fi

printf "%s %s%%\\n" "$icon" "$vol"
