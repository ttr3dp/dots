# Make sxhkd reload its configuration files:
super + Escape
        pkill -USR1 -x sxhkd

# Show clipboard content
super + Insert
      showclip

# Run terminal
super + Return
      "$TERMINAL"
# Run dmenu
super + d
      dmenu_run -c -l 10 -h 12

# Lock screen
super + shift + x
      slock

# Take screenshot
Print
      maim -s $XDG_DESKTOP_DIR/Screenshot-$(date +%s).png && notify-send "Screenshot taken!"

# Volume UP
XF86AudioRaiseVolume
      pulsemixer --change-volume +5
# Volume DOWN
XF86AudioLowerVolume
      pulsemixer --change-volume -5

# Music PLAY
XF86AudioPlay
      cmus-remote -u
# Music STOP
XF86AudioStop
      cmus-remote -s
# Music NEXT
XF86AudioNext
      cmus-remote -n
# Music PREVIOUS
XF86AudioPrev
      cmus-remote -r

# Screen brightness DOWN
XF86MonBrightnessDown
      xbacklight -dec 20%
# Screen brightness UP
XF86MonBrightnessUp
      xbacklight -inc 20%
